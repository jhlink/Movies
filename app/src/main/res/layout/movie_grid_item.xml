<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.udacity.oliverh.movies.model.Movie" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zero"
            android:layout_marginStart="@dimen/zero"
            android:contentDescription="@string/thumbnail_of_movie_poster"
            app:imageUrl="@{movie.posterPath}"
            app:imageSize="@{@string/thumbnailSize}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/colorPrimary"
            tools:layout_height="200dp"
            tools:layout_width="150dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/movieTitleTextWidth"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/movieTitleGridMarginSpacing"
            android:layout_marginLeft="@dimen/movieTitleGridMarginSpacing"
            android:layout_marginRight="@dimen/movieTitleGridMarginSpacing"
            android:layout_marginStart="@dimen/movieTitleGridMarginSpacing"
            android:layout_marginTop="@dimen/movieTitleGridMarginSpacing"
            android:text="@{movie.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:text="@string/testValue" />

    </android.support.constraint.ConstraintLayout>
</layout>
